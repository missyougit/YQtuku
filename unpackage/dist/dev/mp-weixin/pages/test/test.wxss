.share {
  width: 100%;
  height: 100%;
}
.share-box {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  bottom: 0rpx;
  right: 0rpx;
  background-color: #007AFF;
  transition: 0.3s;
  z-index: 999;
}
.share-show {
  transition: all 0.3s ease;
  -webkit-transform: translateY(0%) !important;
          transform: translateY(0%) !important;
}
.share-item {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 90vh;
  background-color: #FFFFFF;
  transition: all 0.3s ease;
  -webkit-transform: translateY(100%);
          transform: translateY(100%);
  z-index: 1999;
}

